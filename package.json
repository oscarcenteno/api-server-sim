{
    "name": "api-server-sim",
    "version": "1.0.0",
    "description": "Api Server Simulator so you can mock api Rest services easily. Also, find an integrated Spy on api calls and an SMTP Server to catch emails.",
    "main": "index.js",
    "scripts": {
        "start": "node test_server/server.js",
        "recorder": "node test_server/recorder.js",
        "test": "jasmine",
        "lint": "eslint ./",
        "lint-fix": "eslint ./ --fix",
        "spell": "cspell **/*.js",
        "tsc": "tsc",
        "checks": "npm run lint && npm run tsc && npm run spell"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/oscarcenteno/api-server-sim.git"
    },
    "author": "Oscar Centeno",
    "license": "MIT",
    "dependencies": {
        "convert-excel-to-json": "^1.7.0",
        "express-openapi-validator": "^5.0.3",
        "maildev": "^2.0.5",
        "underscore": "^1.13.6"
    },
    "devDependencies": {
        "@types/jasmine": "^4.3.1",
        "@types/node": "^18.16.2",
        "axios": "^1.4.0",
        "cspell": "^6.31.1",
        "eslint": "^8.39.0",
        "jasmine": "^4.6.0",
        "jasmine-console-reporter": "^3.1.0",
        "nodemailer": "^6.9.1",
        "typescript": "^5.0.4"
    }
}
